<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.0"/>
  <arg name="roll" default="0.0"/>
  <arg name="pitch" default="0.0"/>
  <arg name="yaw" default="0.0"/>

  <!-- Robot launch file -->
  <include file="$(find diff_robot)/launch/robot_description.launch">
    <!-- Robot pose -->
    <arg name="x" value="$(arg x)"/>
    <arg name="y" value="$(arg y)"/>
    <arg name="z" value="$(arg z)"/>
    <arg name="roll" value="$(arg roll)"/>
    <arg name="pitch" value="$(arg pitch)"/>
    <arg name="yaw" value="$(arg yaw)"/>
  </include>

  <!-- World File -->
  <arg name="world_file" default="$(find diff_robot)/worlds/Office.world"/>

  <!-- Launch Gazebo World -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>

  <!-- Launch Rviz -->
  <!-- <node name="rviz" pkg="rviz" type="rviz" respawn="false" args="-d '$(find diff_robot)/rviz/robot_config.rviz'"/> -->
  <node name="rviz" pkg="rviz" type="rviz" respawn="false"/>
</launch>
